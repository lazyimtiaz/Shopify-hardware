{% comment %}
  Newsletter + trust badges section: captures leads and repeats reliability signals.
{% endcomment %}
<section class="newsletter section-spacing">
  <div class="page-width newsletter__layout">
    <div>
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
      {% form 'customer', class: 'newsletter-form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <label for="NewsletterEmail-{{ section.id }}" class="visually-hidden">Email</label>
        <input
          id="NewsletterEmail-{{ section.id }}"
          type="email"
          name="contact[email]"
          placeholder="Email address"
          value="{{ form.email }}"
          required
        >
        <button type="submit" class="button">Subscribe</button>
      {% endform %}
    </div>

    <div>
      <h3>Why builders choose us</h3>
      <ul class="trust-badges">
        <li>ğŸ… 30+ years serving local builders</li>
        <li>ğŸ§° Premium-grade hardware inventory</li>
        <li>ğŸšš Fast local pickup and delivery options</li>
      </ul>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Get seasonal project tips and inventory updates"},
    {"type": "textarea", "id": "description", "label": "Description", "default": "Join our list for practical hardware guidance, promotions, and restock alerts."}
  ],
  "blocks": [{"type": "@app"}],
  "presets": [{"name": "Newsletter"}]
}
{% endschema %}
